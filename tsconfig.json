{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["esnext", "dom"],
        "module": "commonjs",
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "src",
        "declaration": true,
        "esModuleInterop": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*.ts"
    ]
}