{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["esnext", "dom"],
        "module": "esnext",
        "noImplicitAny": false,
        "removeComments": true,
        "sourceMap": true,
        "noEmit": true,
        "outDir": "dist",
        "rootDir": ".",
        "declaration": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "experimentalDecorators": true
    },
    "include": [
        "src/**/*.ts",
        "__tests__/**/*.ts",
    ]
}